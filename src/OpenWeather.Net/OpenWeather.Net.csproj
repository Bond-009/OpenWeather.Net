<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>https://github.com/Bond_009/OpenWeather.Net/graphs/contributors</Authors>
    <PackageId>OpenWeather.Net</PackageId>
    <ProjectUrl>https://github.com/Bond-009/OpenWeather.Net</ProjectUrl>
    <Version>0.7.6</Version>
  </PropertyGroup>

  <PropertyGroup Label="Configuration">
    <AssemblyName>OpenWeather.Net</AssemblyName>
    <DocumentationFile>bin\Release\OpenWeather.Net.xml</DocumentationFile>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;netstandard2.0</TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT'">netstandard1.1;netstandard2.0;net45</TargetFrameworks>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

</Project>
